<!DOCTYPE html>
<html lang="en">

{{> head}}
    
<body>

    {{> header}}

    <main class="main">
        <div class="container">

            <div class="menu">

                <div class="menu__dropdown">
                    
                    <div class="menu__dropdown_title">{{param.title}}</div>
                    <div class="menu__dropdown_desc">{{param.desc}}</div>

                    <div class="w3-dropdown-hover menu__dropdown_item">
                        <button class="w3-button w3-black">
                            {{param.dropdown}}
                        </button>
                        <div class="w3-dropdown-content w3-bar-block w3-border">
                            
                            {{#each param.dropdownLink}}
                                <a href="{{this.href}}" class="w3-bar-item w3-button w3-hover-blue">
                                    {{this.name}}
                                </a>  
                            {{/each}} 

                        </div>
                    </div>

                </div>

                <div class="menu__divider"></div>

                <div class="menu__cards">

                    {{#each param.route}}
                        <div class="menu__cards_item">
                            <a href="{{this.href}}">
                                <div class="menu__cards_item-img">
                                    <svg id="Layer_1"viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg" data-name="Layer 1"><path d="m19 1h-14a5.006 5.006 0 0 0 -5 5v12a5.006 5.006 0 0 0 5 5h14a5.006 5.006 0 0 0 5-5v-12a5.006 5.006 0 0 0 -5-5zm-14 2h14a3 3 0 0 1 3 3v1h-20v-1a3 3 0 0 1 3-3zm14 18h-14a3 3 0 0 1 -3-3v-9h20v9a3 3 0 0 1 -3 3zm0-8a1 1 0 0 1 -1 1h-12a1 1 0 0 1 0-2h12a1 1 0 0 1 1 1zm-4 4a1 1 0 0 1 -1 1h-8a1 1 0 0 1 0-2h8a1 1 0 0 1 1 1zm-12-12a1 1 0 1 1 1 1 1 1 0 0 1 -1-1zm3 0a1 1 0 1 1 1 1 1 1 0 0 1 -1-1zm3 0a1 1 0 1 1 1 1 1 1 0 0 1 -1-1z"/></svg>
                                </div>
                                <div class="menu__cards_item-header">
                                    {{this.name}}
                                </div>
                            </a>
                        </div>
                    {{/each}} 
   
                </div>

            </div>

        </div>
    </main>

    {{> footer}}

</body>
</html>